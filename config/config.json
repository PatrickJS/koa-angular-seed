{
  "name": "Koa-Angular-Seed",
  "views": {
    "path": "./server/views",
    "engine": "jade"
  },
  "livereload": {
    "port": 35729
  },
  "sockets": {
    "port": 8080
  },
  "build": {
    "path": "build",
    "scripts": "scripts.js",
    "styles": "styles.css",
    "images": "build/images/",
    "prefix": [
      "last 1 version",
      "> 1%",
      "ie 8",
      "ie 7"
    ]
  },
  "paths": {
    "build": "build",
    "public": "public/**",
    "images": "public/images/*.{png,jpg,gif}",
    "scripts": [
      "client/*.js",
      "client/**/*.js"
    ],
    "styles": [
      "client/styles/*.styl"
    ]
  }
}
